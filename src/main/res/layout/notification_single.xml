<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/noti_main_rel"
    >
    <ImageView
        android:id="@+id/noti_app_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_menu_gallery"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/noti_title"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textSize="15sp"
        android:layout_toRightOf="@id/noti_app_icon"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/noti_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textSize="10sp"
        android:layout_toRightOf="@id/noti_app_icon"
        android:layout_below="@id/noti_title"
        android:paddingLeft="10dp"
        />
    <ImageView
        android:id="@+id/noti_playpause"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_menu_send"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        />
    <ImageView
        android:id="@+id/noti_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_menu_manage"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>